{
  "elasticsearch": {
    "index_patterns": ["munin_poi*"],
    "template": {
      "settings": {
        "analysis": {
          "analyzer": {
            "word":{
              "filter":[
                "lowercase",
                "asciifolding"
              ],
              "type":"custom",
              "tokenizer":"standard"
            }
          }
        }
      },
      "mappings": {
        "properties": {
          "address": {
            "enabled": false
          },
          "boundary": {
            "enabled": false
          },
          "poi_type": {
            "properties": {
              "id": {
                "type": "keyword"
              },
              "name": {
                "type": "text",
                "index_options": "docs",
                "analyzer": "word"
              }
            }
          },
          "properties": {
            "type": "flattened"
          },
          "children": {
            "enabled": false
          },
          "type": {
            "type": "constant_keyword",
            "value": "poi"
          }
        }
      }
    },
    "composed_of": ["mimir-base", "mimir-dynamic-mappings"],
    "version": 3,
    "priority": 10
  }
}
